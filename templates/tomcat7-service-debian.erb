#    done
#    if [ $count -gt $kwait ]; then
#      echo -n -e "\nkilling processes which didn't stop after $SHUTDOWN_WAIT seconds"
#      kill -9 $pid
#    fi
  else
    echo "Tomcat is not running"
  fi
  return 0
}

status () {
  pid=$(tomcat_pid)
  if [ -n "$pid" ]
  then
    echo "Tomcat is running with pid: $pid"
  else
    echo "Tomcat is not running"
  fi
}
 
case $1 in
start)
  start
  ;;
stop)
  stop
  ;;
restart)
  stop
  sleep 5
  start
  ;;
status)
  status
  ;;
esac
exit 0

